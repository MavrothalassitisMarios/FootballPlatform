@page
@model FootballAcademyPlatform.Pages.Coach.UpdateCoachModel
@{
}

<h4>Update your Coach Info Bellow</h4>

@if (!Model.ErrorMessage.Equals(""))
{
    <div class="alert alert-primary" role="alert">
        @Model.ErrorMessage
    </div>
}

<form method="post" class="px-4 py-3 bg-success">
    

    <div class="mb-3">
        <label for="id" class="form-label">Coach ID</label>
        <input type="text" class="form-control" id="id" name="id"
               readonly value="@Model.CoachRead!.Id" >
    </div>
    <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input type="text" class="form-control" id="username" name="username"
               placeholder="Username minimum sequence of 5" value="@Model.CoachRead!.Username" required>
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password" 
            placeholder="Minimum 8 [A-Z][a-z][0-9][#?!$%^&*-]" required>
    </div>
    <div class="mb-3">
        <label for="firstname" class="form-label">Firstname</label>
        <input type="text" class="form-control" id="firstname" name="firstname" value="@Model.CoachRead.Firstname">
    </div>
    <div class="mb-3">
        <label for="lastname" class="form-label">Lastname</label>
        <input type="text" class="form-control" id="lastname" name="lastname" value="@Model.CoachRead.Lastname">
    </div>
    <div class="mb-3">
        <label for="phone" class="form-label">Phone number</label>
        <input type="text" class="form-control" id="phone" name="phone"
               placeholder="69 + 8 more digits" value="@Model.CoachRead.Phone">
    </div>
    <div class="mb-3">
        <label for="address" class="form-label">Address</label>
        <input type="text" class="form-control" id="address" name="address" value="@Model.CoachRead.Address">
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email"
               required placeholder="trial@email.com or .gr" value="@Model.CoachRead.Email">
    </div>

    <div class="mb-3">
        <label for="teamId" class="form-label">Team ID</label>
        <input type="text" class="form-control" id="teamId" name="teamId"
               readonly value="@Model.CoachRead.TeamId">
    </div>
    

    <div class="row mb-3">
        <div class="offset-md-1 col-md-3 d-grid">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
        <div class="offset-md-1 col-md-3 d-grid">
            <a role="button" class="btn btn-outline-primary" href="/Teams/TeamOfCoachPlayers?id=@Model.Id">Cancel</a>
        </div>
    </div>
</form>
